# Database
DATABASE_URL="mysql://user:password@localhost:3306/catering_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL="http://localhost:3000"

# Translation (recommended: DeepL API Free)
# Create a free DeepL API key and set it here for best EN/DE quality.
DEEPL_API_KEY=""
# Optional overrides/tuning
DEEPL_API_URL="https://api-free.deepl.com/v2/translate"
DATA_DEFAULT_LANGUAGE="DE"
TRANSLATION_CACHE_TTL_MS=86400000
TRANSLATION_CACHE_MAX_ENTRIES=5000
TRANSLATION_HTTP_TIMEOUT_MS=8000
# Not recommended for production (public, rate-limited). Leave false.
TRANSLATION_ALLOW_PUBLIC_FALLBACK=false
DEEPL_MAX_TEXTS_PER_REQUEST=50
DEEPL_MAX_CHARS_PER_REQUEST=12000
